{# src/Blogger/BlogBundle/Resources/views/Administration/model.html.twig #}

{% block content %}

{% for flashMessage in app.session.flashbag.get('success') %}
  <div class="row">
    <div class="col-lg-8">
      <div class="alert alert-success">
              <p>{{ flashMessage }}</p>
      </div>
    </div>
  </div>
{% endfor %}

{% for flashMessage in app.session.flashbag.get('danger') %}
  <div class="row">
    <div class="col-lg-8">
      <div class="alert alert-danger">
              <p>{{ flashMessage }}</p>
      </div>
    </div>
  </div>
{% endfor %}

<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-8">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-arrow-circle-o-right "></i> Models List</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th class="header">Model</th>
                <th class="header">Name</th>
                <th class="header">isEnabled</th>
                <th class="header">Actions</th>
              </tr>
            </thead>
            {% for model in models %}
              <tr>
                <td>  {{ model.id }}</td>
                <td>  {{ model.name }}</td>
                <td>  {{ model.isEnable  ? 'true' : 'false' }} </td>
                <td>
                  <a style="margin-left:5px;" class="right btn btn-danger btn-xs" data-original-title="Suppress latex" title="Suppress Model" href="{{ path('CKMAppBundle_administration_model_delete', {'model': model.id}) }}">
                    <i class="fa fa-times-circle fa-lg"></i>
                  </a>
                  <a style="margin-left:5px;" class="right btn btn-success btn-xs" href="{{ path('CKMAppBundle_administration_model_edit', {'model': model.id}) }}">
                    <i class="glyphicon glyphicon-pencil tooltips" data-original-title="Edit latex" title="Edit Model"></i>
                  </a>
                  <a style="margin-left:5px;" class="right btn btn-success btn-xs" href="{{ path('CKMAppBundle_administration_model_show', {'model': model.id}) }}">
                    <i class="glyphicon glyphicon-eye-open tooltips" data-original-title="Show latex" title="Show Model"></i>
                  </a>
                </td>
              </tr>
            {% endfor %}
          </table>
        </div>
      </div>
    </div>
  </div>

    <div class="col-sm-4 ">
      <p><h3 class="panel-title"><i class="fa fa-arrow-circle-o-right "></i> Action </h3></p>
      <p><h3 class="panel-title"><i class="glyphicon glyphicon-plus"></i> <a href="{{ path('CKMAppBundle_administration_model_edit', {'model': 0}) }}">add a Model</a></h3></p>
  </div>
</div>

{% endblock %}
