{# src/Blogger/BlogBundle/Resources/views/Administration/showModel.html.twig #}
{% extends 'CKMAppBundle::layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  {% include 'CKMAppBundle:Analysis:mathjax.html.twig' %}
{% endblock %}

{% block titlePage %}
Administration - <small>Model</small>
{% endblock %}

{% block content %}
<h3>Show Model {{ model.Name }}</h3>

<div class="row">
  <div class="right col-xs-12 col-sm-6 col-md-4 col-lg-2">
    <a class="list-group-item" href="{{ path('CKMAppBundle_administration_datacard', {'tab': 'model'}) }}">
      <span class="btn btn-info btn-xs"><i class="fa fa-reply fa-lg" data-original-title="" title=""></i></span>
      &nbsp;Return to Model list
    </a>
  </div>
</div>

<br /><br />
<div class="row">
  <div class="col-sm-12 col-md-12 col-lg-12">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
          <tr>
            <td>model</td>
            <td>{{ model.id }}</td>
          </tr>
          <tr>
            <td>Name</td>
            <td>{{ model.name }}</td>
          </tr>
          <tr>
            <td>is enable ? </td>
            <td>{{ model.isEnable ? 'true' : 'false' }}</td>
          </tr>
          <tr>
            <td>Explanation</td>
            <td>{{ model.documentation|raw }}</td>
          </tr>
      </table>
    </div>
  </div>
</div>

{% endblock %}
