{# src/Blogger/BlogBundle/Resources/views/Administration/tagInput.html.twig #}

{% block content %}

{% for flashMessage in app.session.flashbag.get('success') %}
  <div class="row">
    <div class="col-lg-8">
      <div class="alert alert-success">
              <p>{{ flashMessage }}</p>
      </div>
    </div>
  </div>
{% endfor %}

{% for flashMessage in app.session.flashbag.get('danger') %}
  <div class="row">
    <div class="col-lg-8">
      <div class="alert alert-danger">
              <p>{{ flashMessage }}</p>
      </div>
    </div>
  </div>
{% endfor %}

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-arrow-circle-o-right "></i> Tags List</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th class="header">Tag</th>
                <th class="header">Name</th>
                <th class="header">isEnabled</th>
                <th class="header">Actions</th>
              </tr>
            </thead>
            {% for tagInput in tagInputs %}
              <tr>
                <td>  {{ tagInput.id }}</td>
                <td>  {{ tagInput.name }}</td>
                <td>  {{ tagInput.isEnable  ? 'true' : 'false' }} </td>
                <td>
                  <a style="margin-left:5px;" class="right btn btn-danger btn-xs" data-original-title="Suppress Tag" title="Suppress Tag" href="{{ path('CKMAppBundle_administration_tag_input_delete', {'tagInput': tagInput.id}) }}">
                    <i class="fa fa-times-circle fa-lg"></i>
                  </a>
                  <a style="margin-left:5px;" class="right btn btn-success btn-xs" href="{{ path('CKMAppBundle_administration_tag_input_edit', {'tagInput': tagInput.id}) }}">
                    <i class="glyphicon glyphicon-pencil tooltips" data-original-title="Edit Tag" title="Edit Tag"></i>
                  </a>
                  </a>
                </td>
              </tr>
            {% endfor %}
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
      <p><h3 class="panel-title"><i class="fa fa-arrow-circle-o-right "></i> Action </h3></p>
      <p><h3 class="panel-title"><i class="glyphicon glyphicon-plus"></i> <a href="{{ path('CKMAppBundle_administration_tag_input_edit', {'tagInput': 0}) }}">add a Tag</a></h3></p>
  </div>
</div>

{% endblock %}
