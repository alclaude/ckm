

{% if quantity.value is not null and quantity.expUncertity is not null and quantity.thUncertity is not null%}
<td colspan="3">
<span class="tool" data-toggle="tooltip" data-original-title="{{quantity.name}} value">{{quantity.value}}</span> &pm;
<span class="tool" data-toggle="tooltip" data-original-title="{{quantity.name}} experimental Uncertity">{{quantity.expUncertity}}</span> &pm;
<span class="tool" data-toggle="tooltip" data-original-title="{{quantity.name}} theoretical Uncertity">{{quantity.thUncertity}}</span>
</td>
{% else %}
<td >&nbsp;</td>
<td><span class="tool" data-toggle="tooltip" data-original-title="{{quantity.name}} tag">{{quantity.currentTag}}</span></td>
<td >&nbsp;</td>
{% endif %}
<td><a target="_blank" href="{{ path('CKMAppBundle_documentation_datacard_input', {'scenario': quantity.analyse.scenario.id, 'input': quantity.id , 'tab':'input'}) }}">Quantity documentation</a></td>
